@{
    Layout = null;
    ActionDescriptor action = ViewBag.ActionInfo;
}
<!doctype html>
<html lang="zh-cn">
<head>
    <script>
        if (top != window) {
            top.location.href = "/User/Login";
        }
    </script>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">

    <title>用户登录 - @MvcApplication.Title</title>

    <!-- CSS files -->
    <link rel="stylesheet" href="../../layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="../../css/login.css" media="all" />
    <style>
        
        @@keyframes moveright {
            from {
                background-position-x: -500px;
            }

            to {
                background-position-x: 2000px;
            }
        }
        @@keyframes moveleft {
            from {
                background-position-x: 2000px;
            }

            to {
                background-position-x: -2000px;
            }
        }
        .cloudright {
            animation: moveright 10s linear infinite normal;
        }
        .cloudrightafter {
            animation: moveright 6s linear infinite normal;
            animation-delay: 2s
        }
        .cloudleft {
            animation: moveleft 20s linear infinite normal;
        }
        
    </style>

</head>
<body class="main cloudleft" style="background-position: -280.8px 0px;">

    <div id="mainBody">
        <div id="cloud1" class="cloud cloudright" style="background-position: 891.1px 100px;"></div>
        <div id="cloud2" class="cloud cloudrightafter" style="background-position: 401px 460px;"></div>
    </div>

    <div class="logintop">
        <span style="font-size: 20px;">
            <img src="@Url.Content("~/images/login1.png")" width="32" height="32" style="width: 32px; height: 32px;" alt="" title="" />
            @MvcApplication.Title
        </span>
    </div>

    <div class="loginbody">

        <span class="systemlogo"></span>

        <div class="loginbox" style="position: absolute; left: calc(50% - 347px); ">
            <div style="width:165px; height:96px; position:absolute;top:8px;left:-70px">
                <div class="tou"></div>
                <div class="initial_left_hand" id="left_hand"></div>
                <div class="initial_right_hand" id="right_hand"></div>
            </div>
            <input type="hidden" name="Error" value="@ViewBag.Error" />
            <form class="layui-form" method="post">
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                <ul>
                    <li>
                        <input name="account" type="text" class="loginuser"
                               placeholder="请输入用户名" lay-verify="required">
                    </li>
                    <li>
                        <input name="password" type="password" id="password"
                               class="loginpwd ipt" placeholder="请输入密码" lay-verify="required">
                    </li>
                    <li>
                        <button class="layui-btn loginbtn" lay-submit lay-filter="login">登录</button>
                    </li>
                </ul>
            </form>
        </div>

    </div>

    <div class="loginbm">
        Copyright &copy; 爱拜尔科技有限公司有限公司 2020
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js?@MvcApplication.Version"></script>
    <script src="~/layui/layui.js?@MvcApplication.Version"></script>
    <script src="~/Scripts/aibibase.js?@MvcApplication.Version"></script>
    <script src="~/Scripts/@(action.ControllerDescriptor.ControllerName.ToLower())/@(action.ActionName.ToLower()).js?@MvcApplication.Version"></script>
</body>
</html>
