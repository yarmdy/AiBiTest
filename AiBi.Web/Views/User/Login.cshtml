@{
    Layout = null;
    ActionDescriptor action = ViewBag.ActionInfo;
}
<!doctype html>
<html lang="zh-cn">
<head>
    <script>
        if (top != window) {
            top.location.href = "/User/Login";
        }
    </script>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">

    <title>用户登录 - @MvcApplication.Title</title>

    <!-- CSS files -->
    <link rel="stylesheet" href="../../layui/css/layui.css" media="all" />
    <style>
        html,body,.bgfull{
            height:100%;
        }
        .bgfull {
            background: url(/static/cao/bg.jpg);
            background-size: cover;
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-items: center;
        }
        input:-webkit-autofill {
            background-color: white;
            transition: background-color 50000s ease-in-out 0s;
        }
    </style>

</head>
<body>
    <div class="bgfull">
        <div class="layui-row" style="width:1190px;height:590px;border-radius:10px;display:flex;flex-flow:row nowrap;overflow:hidden;backdrop-filter:blur(15px)">
            <div style="flex: 1; background: #608EDCb8; display: flex; flex-flow: row nowrap; justify-content: center; align-items: center">
                <div style="text-align:center;">
                    <img src="~/static/cao/logo.png" style="width:90px;height:90px" />
                    <p style="color:white;font-size:33px;margin-top:40px">@(MvcApplication.Title)</p>
                </div>
            </div>
            <div style="flex: 1; background: #ffffffb8; display: flex; flex-flow: row nowrap; justify-content: center; align-items: center">
                <div>
                    <p style="font-size:35px;font-weight:500;text-align:center">欢迎登录</p>
                    <div style="margin-top:50px">
                        <input type="hidden" name="Error" value="@(ViewBag.Error)" />
                        <form class="layui-form" method="post">
                            <div class="layui-form-item">
                                <div class="layui-input-wrap" style="width:360px">
                                    <div class="layui-input-prefix">
                                        <i class="layui-icon layui-icon-username"></i>
                                    </div>
                                    <input type="text" name="account" value="" lay-verify="required" placeholder="用户名" lay-reqtext="请填写用户名" autocomplete="off" class="layui-input" lay-affix="clear">
                                    <input type="hidden" name="Error" value="@(ViewBag.ReturnUrl)" />
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <div class="layui-input-wrap" style="width:360px">
                                    <div class="layui-input-prefix">
                                        <i class="layui-icon layui-icon-password"></i>
                                    </div>
                                    <input type="password" name="password" value="" lay-verify="required" placeholder="密   码" lay-reqtext="请填写密码" autocomplete="off" class="layui-input" lay-affix="eye">
                                </div>
                            </div>
                            <div class="layui-form-item" style="width:360px;margin-top:36px">
                                <button class="layui-btn layui-btn-fluid" lay-submit lay-filter="demo-login" style="background: #608EDC">登录</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/Scripts/jquery-3.4.1.min.js?@MvcApplication.Version"></script>
    <script src="~/layui/layui.js?@MvcApplication.Version"></script>
    <script src="~/Scripts/aibibase.js?@MvcApplication.Version"></script>
    <script src="~/Scripts/@(action.ControllerDescriptor.ControllerName.ToLower())/@(action.ActionName.ToLower()).js?@MvcApplication.Version"></script>
</body>
</html>
