@section styles{
    <style>
        .txt_r {
            color: red
        }

        .vm {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }

        [combine] {
            box-sizing: border-box;
            padding: 10px;
            box-shadow: 0px 0px 1px 0px black;
            margin-bottom: 15px;
            clear: both;
        }

            [combine]:after {
                content: "";
                display: block;
                clear: both;
            }

        .questionnumber {
            font-size: 16px;
            height: 26px;
            padding: 0 8px;
            line-height: 26px;
        }

        .questionnumber2 {
            font-size: 14px;
            height: 20px;
            padding: 0 4px;
            line-height: 20px;
        }

        .layui-input-wrap .layui-input-prefix.btndel, .layui-input-wrap .layui-input-split.btndel, .layui-input-wrap .layui-input-suffix.btndel {
            pointer-events: auto;
            cursor: pointer;
        }

        #questionInfo .layui-form-label {
        }

        #questionInfo .layui-input-block {
        }

        .actionbtndiv {
            border-top: 1px solid #d1d1d1;
            padding-top: 10px;
        }

        .layui-form-item .layui-table .layui-form-checkbox[lay-skin=primary] {
            margin-top: 0;
        }
    </style>
}
