    ActionDescriptor action = ViewBag.ActionInfo;
    AiBi.Test.Dal.Model.SysUser CurrentUser = ViewBag.CurrentUser;
    Dictionary<string, object> PageInfo = ViewBag.PageInfo;
    var noCard = ViewBag.NoCard ?? false;
}
